# AumOS Audio Engine â€” Environment Variables
# Copy to .env and fill in values for local development

# Service identity
AUMOS_SERVICE_NAME=aumos-audio-engine
AUMOS_ENVIRONMENT=development
AUMOS_DEBUG=true

# Database (Postgres via asyncpg)
AUMOS_DATABASE_URL=postgresql+asyncpg://aumos:aumos_dev@localhost:5432/aumos
AUMOS_DATABASE_POOL_SIZE=10
AUMOS_DATABASE_MAX_OVERFLOW=20

# Kafka
AUMOS_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
AUMOS_KAFKA_CONSUMER_GROUP_ID=aumos-audio-engine

# Redis
AUMOS_REDIS_URL=redis://localhost:6379/0

# MinIO / Object Storage
AUMOS_MINIO_ENDPOINT=localhost:9000
AUMOS_MINIO_ACCESS_KEY=minioadmin
AUMOS_MINIO_SECRET_KEY=minioadmin
AUMOS_MINIO_BUCKET=aumos-audio
AUMOS_MINIO_SECURE=false

# JWT
AUMOS_JWT_SECRET_KEY=dev-secret-change-in-production
AUMOS_JWT_ALGORITHM=HS256
AUMOS_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Audio Engine specific
AUMOS_AUDIO_GPU_ENABLED=false
AUMOS_AUDIO_PRIVACY_ENGINE_URL=http://localhost:8010
AUMOS_AUDIO_TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
AUMOS_AUDIO_WHISPER_MODEL=base
AUMOS_AUDIO_SAMPLE_RATE=22050
AUMOS_AUDIO_MAX_AUDIO_DURATION_SECONDS=300
AUMOS_AUDIO_MNPI_KEYWORDS_PATH=/app/config/mnpi_keywords.json
AUMOS_AUDIO_DEIDENTIFICATION_THRESHOLD=0.85
AUMOS_AUDIO_OUTPUT_BUCKET=aumos-audio-outputs
AUMOS_AUDIO_TEMP_DIR=/tmp/aumos-audio
